<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="/style/base.css">
    <link rel="stylesheet" href="/style/grid.css">
    <link rel="stylesheet" href="/style/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/d72dd2144a.js" crossorigin="anonymous"></script>  
    <link rel="stylesheet" href="/style/responsive.css">
    <link rel="stylesheet" href="/style/admin/admin-page.css">
    <title>Admin-page</title>
</head>

<body>
    <header class="header header-only">
        <div class="grid wide">
            <a href="/" class="header__logo"><img src="/image/logo.png" alt="logo" class="logo-img"></a>
        </div> 
    </header>
    <div class="container_ad">
        <div class="grid wide">
            <div class="row">
                <div class="col l-2 ad_page-category">
                    <% users.forEach(user => { %>
                        <% if(user.user_role == 'admin'){ %>
                    <div class="ad_category-img"><img src="/image/user-image/<%=user.user_img %>" alt="user-image"></div>
                    <div class="ad_category-name"><%=user.user_name %></div>
                        <% } %>
                    <% }) %>
                    <ul class="ad_page-category-content">
                        <li class="ad_category"><a href="http://">カテゴリー</a></li>
                        <li class="ad_item"><a href="/admin-page">製品</a></li>
                        <li class="ad_order"><a href="http://">注文</a></li>
                        <li class="ad_cutomer ad-checked"><a href="/admin-users">顧客</a></li>
                        <li class="ad_review"><a href="http://">レビュー</a></li>
                    </ul>
                </div>
                <div class="col l-10 ad_page-content">
                    <div class="row">
                        <div class="content-title">
                            <a href="/admin-users" >顧客リスト</a>>
                            <div class="ad-content-title-checked">追加</div>
                        </div>
                    </div>
                    <div class="grid wide">
                        <form action="/users-edit/add" method="post" class=" row user_infor " enctype="multipart/form-data">
                            <div class="user_infor-text col l-5">
                                <div class="user_infor-name">
                                    <label for="user_name">ユーザー名</label>
                                    <input type="text" name="userName" id="user_name" value="">
                                </div>
                                <div class="user_infor-password">
                                    <label for="user_password">パスワード</label>
                                    <input type="text" name="userPassword" id="user_password" value="">
                                </div>
                                <div class="user_infor-email">
                                    <label for="user_email">メールアドレス</label>
                                    <input type="text" name="userEmail" id="user_email" value="">
                                </div>
                                <div class="user_infor-sex">
                                    <label for="user_sex">性別</label>
                                    <input type="text" name="userSex" id="user_sex" value="">
                                </div>
                                <div class="user_infor-birth">
                                    <label for="user_birth">誕生日</label>
                                    <input type="date" name="userBirth" id="user_birth" value="">
                                </div>
                                <div class="user_infor-role">
                                    <label for="user_role">役割</label>
                                    <input type="text" name="userRole" id="user_role" value="">
                                </div>
                            </div>
                            <div class="user_info-img col l-7">
                                    <label for="user_avatar" class="user_info-img-label">プロフィール写真:</label>
                                    <img src="image/user-image/default.jpg" class="user_avatar" alt="user-avatar"style="display:block; width: 200px;" >
                                    <input type="file" name="user_avatar" id="user_avatar" accept="image/*" style="display: none;">
                                    <input type="hidden" name="currentUserImg" value="default.jpg">
                                    <label for="user_avatar" class="image-upload-label" style="display: block">
                                        <span class="material-symbols-rounded"> 画像アップロード </span> 
                                    </label>
                            </div>
                            </div>
                            <% if (error_msg.length > 0) { %>
                            <div class="user_exist-warning"><%= error_msg %></div>    
                            <% } %>
                            <button type="submit" class="primary-btn" style="width: 200px;">ユーザーをを追加</button>
                        </form>

                    </div>
                   
                </div>
            </div>
        </div>
        
    </div>
</body>
<script src="/script/admin/userinfor-edit.js"></script>
</html>